---
import "../styles/global.css";

import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

const allPost = await Astro.glob("../pages/posts/*.md");

const pageTitle = "Mi blog de Astro aprendizaje";
---

<BaseLayout pageTitle={pageTitle}>
  <p>Aquí es donde publicaré acerca de mi viaje aprendiendo Astro.</p>
  <ul>
    {
      allPost.map((post) => (
        <BlogPost title={post.frontmatter.title} url={post.url} />
      ))
    }
  </ul>
</BaseLayout>
